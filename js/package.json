{
  "name": "@deathbeds/prjsf",
  "version": "0.1.0",
  "description": "Build structured data files for pull requests with JSON schema",
  "license": "LICENSE",
  "type": "module",
  "browser": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "{lib,dist}/**/*.{js,ts,json,html,toml,yaml}"
  ],
  "scripts": {
    "build": "yarn build:lib && yarn build:app",
    "build:app": "webpack -c webpack.config.mjs",
    "build:lib": "tsc -b",
    "watch:app": "jlpm build:app --watch --progress",
    "watch:lib": "jlpm build:lib --watch --verbose --preserveWatchOutput"
  },
  "dependencies": {
    "@rjsf/core": "^6.0.0-alpha.0",
    "@rjsf/react-bootstrap": "^6.0.0-alpha.0",
    "@rjsf/utils": "^6.0.0-alpha.0",
    "@rjsf/validator-ajv8": "^6.0.0-alpha.0",
    "preact": "^10.24.0",
    "react-bootstrap": "^2.10.5",
    "smol-toml": "^1.3.0",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.3",
    "@types/webpack": "^5.28.5",
    "bootstrap": "^5.3.3",
    "copy-webpack-plugin": "^11.0.0",
    "html-webpack-plugin": "^5.5.3",
    "source-map-loader": "^5.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
